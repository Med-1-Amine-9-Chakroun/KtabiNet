
{% extends "./adminbase.html.twig" %}

{% block mainContent %}
<div class="container" style="display:flex; flex-direction: justify-content; width:100%; height: 80vh; align-items: center;">
    <div class="card mt-10" style="margin-top:20px">


        <div class="container mt-5">
            {{ form_start(form, {'attr': {'class': 'row g-3 justify-content-center'}}) }}





            <div class="col-md-5 mt-2">
                {{ form_row(form.NomAdmin) }}
            </div>

            <div class="col-md-5 mt-2">
                {{ form_row(form.PrenomAdmin) }}
            </div>

            <div class="col-md-10 mt-2">
                {{ form_row(form.email) }}
            </div>
        
            
             <div class="col-md-10 mt-2">
                {{ form_row(form.NewPassword) }}
            </div>
            
      

            <div class="form-group col-md-10 mt-2">
                {{ form_label(form.confirmNewPassword, 'Confirmer mot de passe') }}
                {{ form_widget(form.confirmNewPassword, {'attr': {'class': 'form-control bg-trasparent block border-secondary border-b-2 w-full h-20 text-6xl ouline-none'}}) }}
            </div>
            <div class="col-md-10 mt-2">
                <div class="custom-error-style">
                    {{ form_errors(form.confirmNewPassword) }}
                </div>
            </div>
       
            


            <div class="col-md-10 mt-3">
                {{ form_row(form.checkMeOut) }}
            </div>

            {# Les autres champs du formulaire ici... #}

            <div class="col-10 d-flex justify-content-end mb-3">
                {{ form_row(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>

</div>
    </div>
{% endblock %}