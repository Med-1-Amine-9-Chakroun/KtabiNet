<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}KtabiNet!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <div class="container-fluid" style="height: 100vh;">
            <div class="row" style="height: 100vh;">
                {# NavBar Content #}
                {% block mainNav %} 
                    <nav class=" navbar navbar-expand-lg lighten-1 navbar-dark bg-dark" style="height: 7vh; width:100%; ">
                        <a class="navbar-brand" href="#">Navbar</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-555"
                            aria-controls="navbarSupportedContent-555" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent-555">                        
                            <div class="bg-dark " >
                                <button type="button" class="btn bg-dark " data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-user fa-2xl" style="color: #ffffff;"></i>
                                </button>
                                <ul class="dropdown-menu custom-dropdown-menut mr-2" style="right: 0; left: auto;">
                                    <li><button class="dropdown-item" type="button">Modifier profile</button></li>

                                    <li><button class="dropdown-item" type="button">Another action</button></li>
                                    <hr>
                                    <li><button class="dropdown-item" type="button">Deconnexion</button></li>
                                </ul>
                            </div>                        
                        </div>                        
                    </nav>
                {% endblock %}
                
                {% block navbar %} 
                    <nav class=" d-none d-md-block sidebar " style="height: 100vh; width: 13%; background-color: #2d2d2d;">


                        <div class="space" style="height: 10vh;"></div>



                    
                        <div class="sidebar-sticky">
                            <ul class="nav flex-column" style="font-size:20px">
                                <li class="nav-item mt-3">
                                    <a class="nav-link active text-white " href="#">
                                        <i class="fa-solid fa-bars"></i> &nbsp;
                                        Liste livre
                                    </a>
                                </li>                    
                                <li class="nav-item mt-3">
                                    <a class="nav-link text-white" href="#">
                                    <i class="fa-solid fa-bars"></i> &nbsp;
                                        Liste commande
                                    </a>
                                </li>

                                <li class="nav-item mt-3">
                                    <a class="nav-link text-white" href="#">
                                    <i class="fa-solid fa-plus"></i> &nbsp;
                                        Ajouter livre
                                    </a>
                                </li>
                                <hr>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="#">
                                    <i class="fa-solid fa-chart-line"></i> &nbsp;
                                        Dashboard
                                    </a>
                                </li>
                                <li class="nav-item mt-3">
                                    <a class="nav-link text-white" href="#">
                                    
                                    </a>
                                </li>
                                <li class="nav-item mt-3">
                                    <a class="nav-link text-white" href="#">
                                    
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </nav>
                {% endblock %}
        
                {# Page Content #}
                {% block main %} 
                    

                        <div class="column" style="height: 100vh; width:87%;">
                            
            
                            <main role="main"  style="height: 93vh; width:100%; ">                                        
                                <div class="content m-10">
                                    {% block mainContent %} 
                                    {% endblock %}
                                </div>
                            </main> 
                        </div>
                    
                {% endblock %}
            </div>
        </div>
     {% block body %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>



<script src="https://kit.fontawesome.com/3220ca98b3.js" crossorigin="anonymous"></script>
    </body>
</html>
