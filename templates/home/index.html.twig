{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}"> {# Link to your specific CSS file #}
{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <img src="https://cdn.pixabay.com/photo/2015/11/19/21/10/glasses-1052010_640.jpg" alt="Welcome Image">
        <h1 class="display-4">Welcome to KtabyNet</h1>
    </div>
</div>
<div class="row hedding m-0 pl-3 pt-0 pb-3">
        mes liev
        </div>
<section class="flex">
    {% for livre_reel in livres_reel %}
    
    <section>
    <a href="{{ path('app_LivreReel', {'id': livre_reel.id}) }}">
        <img src="{{ livre_reel.imageUrl }}" alt="{{ livre_reel.titre }}" />
        <h2>{{ livre_reel.titre }}</h2>
        <p>{{ livre_reel.description }}</p>
        <aside>
            <ul>
                <li>Price: {{ livre_reel.prix }} dt</li>
                <li> In Stock </li>
            </ul>
            <button>Add to Cart</button>
        </aside>
    </section>
    {% endfor %}
    
    {% for livre in livres_pdf %}
    <section>
    <a href="{{ path('app_LivrePdf', {'id': livre.id}) }}">
        <img src="{{ livre.urlImage }}" alt="{{ livre.titre }}" />
        <h2>{{ livre.titre }}</h2>
        <p>{{ livre.description }}</p>
        <aside>
            <ul>
                <li>Price: {{ livre.prix }} dt</li>
                <li>PDF</li>
            </ul>
            <button>buy know</button>
        </aside>
    </section>
    {% endfor %}
</section>
{% endblock %}
